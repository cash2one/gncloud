<pool type='dir'>
    <name>{{pool_name}}</name>
    <capacity unit='bytes'>{{pool_capacity}}</capacity>
    <allocation unit='bytes'>{{pool_allocation}}</allocation>
    <available unit='bytes'>{{pool_available}}</available>
    <source>
    </source>
    <target>
        <path>/data/local/images/kvm/instance{{pool_name}}</path>
        <permissions>
            <mode>0755</mode>
            <owner>-1</owner>
            <group>-1</group>
        </permissions>
    </target>
</pool>